                                            <li><a href="/Satis/Index"><i class="fa fa-dollar"></i> Satışlarım</a></li>

                                        }

                                        @if (User.Identity.IsAuthenticated)
                                        {
                                            <li><a href="/Sepet/Index"><img src="~/Content/Image/sepet.png" width="30" height="30" /><label style="color:red">@{Html.RenderAction("ToplamAdet", "Sepet");}</label></a></li>
                                        }


                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div><!--/header-middle-->

    <div class="site-branding-area">
